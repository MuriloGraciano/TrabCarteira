@page "/todascarteiras"
@inject DadosCarteiras dadosCarteira
@inject NavigationManager nav

<h1>ListarCarteiras</h1>
@if(dadosCarteira.ListaDados is not null)
{
    foreach(var carteira in dadosCarteira.ListaDados)
    {
        <h5>Carteira: @carteira.Dono <br>
            Saldo: @carteira.Saldo  <br>
            Numero da Conta: @carteira.NumeroDaConta <br>
            Limite da Conta: @carteira.LimiteConta
        </h5>
            <button 
                @onclick="() => AbrirTela(carteira.NumeroDaConta)"
                >Acessar 
            </button>
    }
}

@code {

    public void AbrirTela(string carteiraNome)
    {
        nav.NavigateTo("/acesso/" + carteiraNome);
    }

}
